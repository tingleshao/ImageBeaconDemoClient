<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chongshao.imagebeacondemoclient.MainActivity">

    <Button
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/testButton"
        android:layout_below="@+id/scanButton"
        android:layout_alignEnd="@+id/scanButton"
        android:layout_alignStart="@+id/scanButton"
        android:visibility="invisible" />

    <Button
        android:text="Scan Gray"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="46dp"
        android:id="@+id/scanButton"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Scan Color"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/scanButtonColor"
        android:layout_alignBaseline="@+id/scanButton"
        android:layout_alignBottom="@+id/scanButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="125dp" />

    <Button
        android:text="Reset"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/testButton"
        android:layout_alignStart="@+id/scanButtonColor"
        android:id="@+id/resetButton"
        android:layout_alignEnd="@+id/scanButtonColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/progress" />

    <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/scanButtonTri"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="201dp"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:layout_height="20pt"
        app:srcCompat="@drawable/uncicon"
        android:id="@+id/imageView3"
        android:layout_width="20pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=" \t\t\t\t\t\tFrom IoT Lab @ UNC CS \n \t\t\t\t\t\tcshao@cs.unc.edu"
        android:id="@+id/textView"
        android:layout_alignParentBottom="false"
        android:layout_height="15pt"
        android:layout_width="100pt"
        android:layout_marginTop="200pt" />

    <ImageView
        app:srcCompat="@drawable/question"
        android:id="@+id/imageView"
        android:layout_marginLeft="128dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
